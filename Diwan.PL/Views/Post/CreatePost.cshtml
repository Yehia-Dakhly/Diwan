@using Diwan.DAL.Models
@using Microsoft.AspNetCore.Identity
@model CreatePostViewModel
@inject UserManager<DiwanUser> UserManager
@{
    var CurrentUser = await UserManager.GetUserAsync(User);
}
@{
    ViewData["Title"] = "Create Post";
}

<div class="create-post-container">
    <h2>Create a new post</h2>

    <form asp-action="CreatePost" method="post" enctype="multipart/form-data">
        <input hidden asp-for="@Model.AuthorId" value="@CurrentUser.Id" />

        <div class="form-group">
            <textarea asp-for="Content" class="form-control" placeholder="What's on your mind?" rows="4"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Post Visibility</label>
            <select asp-for="Visibility" class="form-select">
                <option value="0">Public 🌍</option>
                <option value="1">Friends 👥</option>
                <option value="2">Only Me 🔒</option>
            </select>
        </div>

        <div class="form-group">
            <label>Tag (optional)</label>
            <input asp-for="Tag" class="form-control" placeholder="#YourTag" />
        </div>

        <div class="form-group">
            <label>Image (optional)</label>
            <input type="file" name="Picture" class="form-control" accept="image/*" />
        </div>

        <div class="btn-area">
            <button type="submit" class="btn btn-primary">Post</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
