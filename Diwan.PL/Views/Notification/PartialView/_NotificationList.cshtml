@model IEnumerable<NotificationViewModel>

@if (Model != null && Model.Any())
{
    @foreach (var notification in Model)
    {
        <li class="notification-item @(notification.IsRead ? "read" : "unread")">
            <a class="dropdown-item d-flex align-items-center gap-2"
               asp-action="ReadNotification"
               asp-route-id="@notification.Id"
               asp-route-url="@notification.URL"
               asp-controller="Notification">

                <img src="~/Files/Images/@notification.PictureURL"
                     alt="Profile"
                     class="notification-img rounded-circle" />

                <div class="notification-content flex-grow-1">
                    <small class="message">@notification.Message</small><br />
                    <small class="time text-muted">@notification.CreatedAt.ToShortTimeString()</small>
                </div>
            </a>
        </li>
    }
}
else
{
    <li>
        <span class="dropdown-item text-muted text-center p-3">لا توجد إشعارات جديدة</span>
    </li>
}

<li><hr class="dropdown-divider"></li>
<li><a class="dropdown-item text-center view-all" href="#">عرض كل الإشعارات</a></li>
