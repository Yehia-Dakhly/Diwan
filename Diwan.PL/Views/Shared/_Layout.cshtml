<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ديوان</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    <style>
        body {
            background-color: #F5F5F5; /* لون خلفية فاتح يشبه ورق البردي */
        }

        .navbar-diwan {
            background-color: #5D4037; /* لون بني غامق يشبه غلاف كتاب جلدي */
        }

            .navbar-diwan .navbar-brand,
            .navbar-diwan .nav-link {
                color: #FFFFFF;
                font-weight: bold;
            }

                .navbar-diwan .nav-link:hover {
                    color: #D7CCC8; /* لون بني أفتح عند مرور الماوس */
                }

            .navbar-diwan .navbar-brand {
                font-family: 'Times New Roman', Times, serif; /* خط كلاسيكي أدبي */
                font-size: 1.5rem;
            }

        .footer-diwan {
            background-color: #5D4037;
            color: #E0E0E0;
        }
        /* Style for the notification dropdown */
        .dropdown-menu {
            min-width: 350px; /* لجعل القائمة المنسدلة أعرض */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-diwan border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-feather-alt"></i> ديوان
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">الرئيسية</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Profile" asp-action="Index">ملفي الشخصي</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Friendship" asp-action="Friends">أصدقائي</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Friendship" asp-action="AddFriend">بحث عن أصدقاء</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="SignOut">تسجيل خروج</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity is { IsAuthenticated: true })
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Friendship" asp-action="FriendRequests" title="طلبات الصداقة">
                                    <i class="fas fa-user-friends"></i>
                                </a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="الإشعارات">
                                    <i class="fas fa-bell"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown" id="notificationMenu">
                                    <li class="text-center p-2"><div class="spinner-border spinner-border-sm" role="status"></div></li>
                                </ul>
                            </li>
                        }

                        @* <partial name="_LoginPartial" /> *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer-diwan text-center">
        <div class="container">
            &copy; 2025 - ديوان: مجتمع الشعر والأدب
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if (User.Identity is { IsAuthenticated: true })
    {
        <script>
            $(document).ready(function () {
                // عندما يتم الضغط على أيقونة الجرس
                $('#notificationDropdown').on('click', function () {
                    // قبل إرسال الطلب، أظهر أيقونة التحميل
                    $("#notificationMenu").html('<li class="text-center p-2"><div class="spinner-border spinner-border-sm" role="status"></div></li>');

                    // أرسل طلب GET إلى الـ Action الخاص بالإشعارات
                    $.get("/Notifications/GetNotificationsPartial", function (data) {
                        // ضع الـ HTML الذي تم إرجاعه من الـ Action داخل القائمة المنسدلة
                        $("#notificationMenu").html(data);
                    });
                });
            });
        </script>
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>