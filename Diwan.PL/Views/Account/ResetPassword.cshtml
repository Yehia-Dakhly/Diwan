@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6 text-center mb-5">
			<h1 class="heading-section mt-5">Login</h1>
		</div>
	</div>
	<div class="row justify-content-center">
		<div class="col-md-6 col-lg-4">
			<div class="login-wrap p-0">
				@* <h3 class="mb-4 text-center">Have an account?</h3> *@
				<div asp-validation-summary="All"></div>
				<form asp-action="ResetPassword">

					<div class="form-group">
						<input asp-for="@Model.NewPassword" class="form-control" placeholder="NewPassword" required>
						<span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
					</div>
					<div class="form-group">
						<input id="password-field" asp-for="@Model.ComfirmNewPassword" class="form-control" placeholder="ComfirmNewPassword" required>
						<span asp-validation-for="@Model.ComfirmNewPassword" class="text-danger"></span>
						<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
					</div>


					<div class="form-group d-md-flex">
						<div class="mr-1 text-md-left">
							<p>Don't Have An Account? <a asp-action="Register" style="color: #fff"><strong>Sign Up</strong></a>
						</div>
						<div class="ml-1 text-md-right">
							<a asp-action="ForgetPassword" style="color: green"><strong>Forgot Password</strong></a>
						</div>
					</div>
					<div class="form-group">
						<input type="submit" value="Reset Password" class="form-control btn btn-primary submit px-3">
					</div>
				</form>
				<p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>
				<div class="social d-flex text-center">
					<a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
					<a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
				</div>
			</div>
		</div>
	</div>
</div>
@section ValidationScriptSection {
	<partial name="_ValidationScriptsPartial" />
}
@section AuthSection {
	<partial name="AuthSection" />
}



