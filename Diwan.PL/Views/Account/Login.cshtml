@model Diwan.PL.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="outer-background">
    <div class="login-container">
        <h1 class="login-title">مرحباً بكم في ديوان</h1>

        <form asp-action="Login" class="login-form">
            <div class="form-group">
                <label asp-for="Email">البريد الإلكتروني</label>
                <input asp-for="Email" type="email" placeholder="أدخل البريد الإلكتروني" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">كلمة المرور</label>
                <input asp-for="Password" type="password" placeholder="أدخل كلمة المرور" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="options-row">
                <div class="remember-me">
                    <input asp-for="RememberMe" type="checkbox" id="RememberMe" />
                    <label for="RememberMe">تذكرني</label>
                </div>
                <div class="forgot-password">
                    <a asp-action="ForgotPassword">هل نسيت كلمة المرور؟</a>
                </div>
            </div>


            <button type="submit" class="login-btn">تسجيل الدخول</button>

            <p class="register-text">
                ليس لديك حساب؟ <a asp-action="Register">قم بإنشاء حساب</a>
            </p>
        </form>
    </div>
</div>

@section _ValidationScriptsPartial {
    <partial name="_ValidationScriptsPartial" />
}

@section AuthSection {
    <link rel="stylesheet" href="~/css/Login.css" />
    <partial name="AuthSection" />
}
