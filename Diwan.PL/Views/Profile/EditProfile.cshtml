@model EditProfileViewModel
@{
    ViewData["Title"] = "EditProfile";
}

<h2>Edit Profile</h2>

<form asp-action="EditProfile" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Gender"></label>
        <select asp-for="Gender" class="form-control">
            <option value="0">Select</option>
            <option value="1">Male</option>
            <option value="2">Female</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Bio"></label>
        <textarea asp-for="Bio" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Picture">Profile Picture</label>
        <input type="file" asp-for="Picture" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CoverPic">Cover Picture</label>
        <input type="file" asp-for="CoverPic" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
</form>
