@model IEnumerable<FriendViewModel>

@{
    ViewData["Title"] = "أصدقائي";
}

<div class="container mt-4">
    <h1 class="mb-4">قائمة الأصدقاء</h1>

    @if (Model != null && Model.Any())
    {
        <div class="list-group shadow-sm">
            @foreach (var friend in Model)
            {
                @* <a asp-controller="User" asp-action="Profile" asp-route-id="@friend.Id" class="list-group-item list-group-item-action d-flex align-items-center p-3">

                    <img src="~/Files/Images/@friend.PictureURL" alt="Profile Picture" class="rounded-circle me-3" style="width: 50px; height: 50px; object-fit: cover;" />

                    <div class="flex-grow-1">
                        <h5 class="mb-1">@friend.FullName</h5>
                    </div>

                    <i class="fas fa-chevron-left text-muted"></i>
                </a> *@
                <div class="list-group-item d-flex align-items-center justify-content-between p-3">

                    <a asp-controller="User" asp-action="Profile" asp-route-id="@friend.Id" class="d-flex align-items-center text-decoration-none text-dark flex-grow-1">
                        <img src="~/Files/Images/@friend.PictureURL"
                             alt="Profile Picture"
                             class="rounded-circle me-3"
                             style="width: 50px; height: 50px; object-fit: cover;" />

                        <div class="flex-grow-1">
                            <h5 class="mb-1">@friend.FullName</h5>
                        </div>
                    </a>

                    <!-- زر القائمة المنسدلة -->
                    <div class="dropdown">
                        <button class="btn btn-sm btn-light border-0" type="button" id="friendMenuButton-@friend.Id" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="friendMenuButton-@friend.Id">
                            <li>
                                <a class="dropdown-item text-danger delete-friend"
                                   href="#"
                                   data-id="@friend.Id">
                                    <i class="fas fa-user-minus me-2"></i> حذف الصديق
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item text-warning block-friend"
                                   href="#"
                                   data-id="@friend.Id">
                                    <i class="fas fa-ban me-2"></i> حظر
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

            }
        </div>
    }
    else
    {
        <div class="text-center mt-5">
            <i class="fas fa-users-slash fa-3x text-muted"></i>
            <p class="mt-3">ليس لديك أي أصدقاء حتى الآن. ابدأ بالبحث عن أصدقاء جدد!</p>
            <a asp-controller="Friendship" asp-action="AddFriend" class="btn btn-primary mt-2">ابحث عن أصدقاء</a>
        </div>
    }
</div>
@section Scripts{
    <script>
        $(document).on('click', '.delete-friend', function (e) {
            e.preventDefault();
            const friendId = $(this).data('id');

            if (confirm('هل أنت متأكد أنك تريد حذف هذا الصديق؟')) {
                $.post('/Friendship/DeleteFriend/' + friendId)
                    .done(function () {
                        alert('تم حذف الصديق بنجاح.');
                        location.reload();
                    })
                    .fail(function () {
                        alert('حدث خطأ أثناء الحذف.');
                    });
            }
        });

        $(document).on('click', '.block-friend', function (e) {
            e.preventDefault();
            const friendId = $(this).data('id');

            if (confirm('هل أنت متأكد أنك تريد حظر هذا الصديق؟')) {
                $.post('/Friendship/BlockFriend/' + friendId)
                    .done(function () {
                        alert('تم حظر الصديق.');
                        location.reload();
                    })
                    .fail(function () {
                        alert('حدث خطأ أثناء الحظر.');
                    });
            }
        });
    </script>

}